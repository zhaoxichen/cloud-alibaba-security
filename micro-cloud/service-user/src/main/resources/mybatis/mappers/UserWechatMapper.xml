<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.galen.micro.user.mapper.UserWechatMapper">

    <select id="selectByOpenId" resultType="com.galen.micro.user.model.UserWechatWeb" parameterType="java.lang.String">
        select
        *
        from user_wechat_web
        where open_id = #{openId,jdbcType=CHAR}
        limit 1
    </select>

    <select id="selectByUserId" resultType="java.util.Map" parameterType="java.lang.Long">
        select
        username,password
        from sys_user
        where id = #{userId,jdbcType=BIGINT}
        limit 1
    </select>

    <update id="updatePrimaryKeyByOpenId" parameterType="com.galen.micro.user.model.UserWechatWeb">
        update user_wechat_web
        <set>
            <if test="userId != null">
                user_id = #{userId,jdbcType=BIGINT},
            </if>
            <if test="unionId != null">
                union_id = #{unionId,jdbcType=CHAR},
            </if>
            <if test="phone != null">
                phone = #{phone,jdbcType=CHAR},
            </if>
            <if test="nickname != null">
                nickname = #{nickname,jdbcType=VARCHAR},
            </if>
            <if test="photoUrl != null">
                photo_url = #{photoUrl,jdbcType=VARCHAR},
            </if>
        </set>
        where open_id = #{openId,jdbcType=CHAR}
    </update>

</mapper>